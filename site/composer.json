{
    "name": "roots/bedrock",
    "type": "project",
    "license": "MIT",
    "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure.",
    "homepage": "https://roots.io/bedrock/",
    "authors": [
        {
            "name": "Scott Walkinshaw",
            "email": "scott.walkinshaw@gmail.com",
            "homepage": "https://github.com/swalkinshaw"
        },
        {
            "name": "Ben Word",
            "email": "ben@benword.com",
            "homepage": "https://github.com/retlehs"
        }
    ],
    "keywords": [
        "bedrock",
        "composer",
        "roots",
        "wordpress",
        "wp",
        "wp-config"
    ],
    "support": {
        "issues": "https://github.com/roots/bedrock/issues",
        "forum": "https://discourse.roots.io/category/bedrock"
    },
    "repositories": {
        "my-yoast": {
            "type": "composer",
            "url": "https://my.yoast.com/packages/"
        },
        "0": {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        },
        "1": {
            "type": "composer",
            "url": "https://pivvenit.github.io/acf-composer-bridge/composer/v3/wordpress-muplugin/"
        }
    },
    "require": {
        "php": ">=7.4 <8",
        "composer/installers": "^1.10",
        "vlucas/phpdotenv": "^5.3",
        "oscarotero/env": "^2.1",
        "microsoft/azure-storage-blob": "*",
        "microsoft/azure-storage-table": "*",
        "microsoft/azure-storage-queue": "*",
        "microsoft/azure-storage-file": "*",
        "roots/bedrock-autoloader": "^1.0",
        "roots/wordpress": "^5.8",
        "roots/wp-config": "1.0.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "roots/multisite-url-fixer": "^1.1",
        "advanced-custom-fields/advanced-custom-fields-pro": ">=5.9 <5.11",
        "wpackagist-plugin/acf-extended": "0.8.8.6",
        "wpackagist-plugin/akismet": "^4.2.1",
        "wpackagist-plugin/broken-link-checker": "^1.11.16",
        "wpackagist-plugin/custom-permalinks": "^2.4",
        "wpackagist-plugin/easy-wp-smtp": "^1.4.7",
        "wpackagist-plugin/gravity-forms-custom-post-types": "^3.1.25",
        "wpackagist-plugin/limit-login-attempts-reloaded": "^2.23.2",
        "wpackagist-plugin/nitropack": "^1.5.7",
        "wpackagist-plugin/svg-support": "^2.3",
        "wpackagist-plugin/user-role-editor": "^4.60.2",
        "wpackagist-plugin/wordfence": "^7.5.6",
        "wpackagist-plugin/wp-security-audit-log": "^4.3.3.1",
        "wpackagist-plugin/wps-hide-login": "^1.9.1",
        "wpackagist-plugin/tablepress": "^1.14",
        "wpackagist-plugin/wpo365-login": "17.4",
        "bueltge/multisite-global-media": "^0.2.0",
        "yoast/wordpress-seo-premium": "^2.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "wpackagist-plugin/*": true,
            "roots/*": true,
            "oscarotero/env": true,
            "composer/installers": true,
            "pivvenit/acf-pro-installer": true,
            "advanced-custom-fields/advanced-custom-fields-pro": true,
            "roave/security-advisories": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "squizlabs/php_codesniffer": true,
            "wp-coding-standards/wpcs": true,
            "bueltge/multisite-global-media": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin",
                "advanced-custom-fields/advanced-custom-fields-pro",
                "wpackagist-plugin/acf-extended",
                "wpackagist-plugin/easy-wp-smtp",
                "wpackagist-plugin/gravity-forms-custom-post-types",
                "wpackagist-plugin/wpo365-login",
                "bueltge/multisite-global-media"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "test": [
            "phpcs --standard=WordPress  --ignore=*.css,*.js,*.min.*,*/node_modules/*"
        ],
        "fix": [
            "phpcbf --standard=WordPress  --ignore=*.css,*.js,*.min.*"
        ]
    }
}
